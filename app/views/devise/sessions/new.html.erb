
<%= form_for(resource,  as: resource_name, url: session_path(resource_name),:html => { :class => 'login' })  do |f| %>
  <h2 class="login-title">Log in</h2>

    <%= f.label :email %>
    <%= f.email_field :email,  autofocus: true, class: 'login-input' %>

    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: 'login-input' %>

  <% if devise_mapping.rememberable? -%>

      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>

  <% end -%>

    <%= f.submit "Log in" , class: "login-button"%>

<%= render "devise/shared/links" %>
<% end %>


